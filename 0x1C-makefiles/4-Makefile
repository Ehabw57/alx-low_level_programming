CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
SRC = main.c school.c m.h
OBJ = main.o school.o
NAME = school
RM = rm

all: $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

main.o: main.c m.h
	$(CC) $(CFLAGS) -c main.c -o main.o

school.o: school.c m.h
	$(CC) $(CFLAGS) -c school.c -o school.o

re: oclean all

clean:
	$(RM) -f *~ $(NAME)

oclean:
	$(RM) -f $(OBJ)

fclean: clean oclean
	
